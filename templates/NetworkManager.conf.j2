{{ ansible_managed | comment }}
{% macro render_section(values) %}
{%   for key, value in values|dictsort() %}
{%     if value is list %}
{{ key }} = {{ value | join(', ') }}
{%     elif value in ['TRUE', 'True', 'true', 'yes', '1', 1, true] %}
{{ key }} = true
{%     elif value in ['FALSE', 'False', 'false', 'no', '0', 0, false] %}
{{ key }} = false
{%     else %}
{{ key }} = {{ value }}
{%     endif %}
{%   endfor %}
{% endmacro %}

#
# see NetworkManager.conf(5)
#

{% for section, options in cfg | dictsort() %}
[{{ section }}]
{{ render_section(options) }}
{% endfor %}
